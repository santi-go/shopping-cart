<LinkTo 
  @route="item" 
  @model={{ @beverage.id }} 
  class="product"
>
  <article class="beverage">
    <Beverage::Image 
      src={{@beverage.image}} 
      alt="A picture of a {{@beverage.name}}" 
    />
    <Beverage::Details 
      @name={{@beverage.name}}
      @price={{currency @beverage.price}}
    />
  </article>
</LinkTo>